generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Subscriptions {
  id        Int                  @id @default(autoincrement())
  email     String               @unique
  status    SubscriptionStatuses
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
  deletedAt DateTime
}

enum SubscriptionStatuses {
  SUBSCRIBED
  UNSUBSCRIBED
}

model Metrics {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime
  metric_name String
  value       String
}
